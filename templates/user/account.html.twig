{% extends '/base.html.twig' %}

{% block title %}Pause{% endblock %}

{% block body %}
<div class="container">
            <div class="col m12">
            <h2 class="center-align">Edition du mot de passe</h2>
            <div class="row">
                {{ form_start(passForm) }}
                    <div class="row">
                        {{ form_row(passForm.password.first) }}
                        {{ form_row(passForm.password.second) }}
                    </div>
                    <div class="row">
                        <div class="col m12">
                            <p class="right-align">
                                <button class="btn btn-large waves-effect waves-light" type="submit" name="action">Sauvegarder</button>
                            </p>
                        </div>
                    </div>
                {{ form_end(passForm) }}
            </div>
        </div>
</div>

<script>
    {% if success %}
        {% for success_m in success %}
            M.toast({html: '{{ success_m }}'})
        {% endfor %}
    {% endif %}
    {% if errors %}
        {% for error_m in errors %}
            M.toast({html: '{{ error_m }}'})
        {% endfor %}
    {% endif %}
</script>
{% endblock %}