{% extends 'base.html.twig' %}

{% block title %}Pause{% endblock %}

{% block body %}
    <div class="container">
      <h2>Configuration</h2>
      <div class="row">
        <h4>Imports</h4>
        <div class="row">
          <h5>Pauses / RÃ©cup</h5>
            <form action="/admin/settings" method="POST" enctype="multipart/form-data">
                <div class="file-field input-field">
                <div class="btn blue col s3">
                    <span>Importer</span>
                    <input type="file" name="file_break">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
                </div>
                <button class="btn waves-effect col s12 green" type="submit">Envoyer</button>
            </form>
        </div>
        <div class="row">
          <h5>Staff</h5>
            <form action="/admin/settings" method="POST" enctype="multipart/form-data">
                <div class="file-field input-field">
                <div class="btn blue col s3">
                    <span>Importer</span>
                    <input type="file" name="file_user">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
                </div>
                <button class="btn waves-effect col s12 green" type="submit">Envoyer</button>
            </form>
        </div>
        {% if not errors is empty %}
        <div class="row">
            <h5>Erreurs</h5>
            {% for error in errors %}
                <div class="card-panel red lighten-3">{{ error }}</div>
            {% endfor %}
        </div>
        {% endif %}
{% endblock %}

{% block js %}
    <script>
    {% if not success is empty %}
        {% for v in success %}
            M.toast({html: {{ v }}, classes: 'rounded lime accent-3'});
        {% endfor %}
    {% endif %}
    </script>
{% endblock %}