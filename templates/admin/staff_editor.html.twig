{% extends '/base.html.twig' %}

{% block title %}Pause{% endblock %}

{% block body %}
<div class="container">
            <div class="col m12">
            <h2 class="center-align">Edition d'utilisateur</h2>
            <div class="row">
                {{ form_start(form) }}
                    <div class="row">
                        {{ form_row(form.username) }}
                    </div>
                    <div class="row">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="row">
                        {{ form_row(form.firstname) }}
                    </div>
                    <div class="row">
                        {{ form_row(form.lastname) }}
                    </div>
                    <div class="row">
                        {{ form_row(form.password, {
                            label: 'Password',
                            value: '',
                            required: false
                        }) }}
                    </div>
                    <div class="row">
                        <div class="col m12">
                            <p class="right-align">
                                <button class="btn btn-large waves-effect waves-light" type="submit" name="action">Connexion</button>
                            </p>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
</div>
{% endblock %}